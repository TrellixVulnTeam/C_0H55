/*
 * File: findAbs.c 
 * ---------------
 * This program computes the absolute value of a number.
 */

#include <stdio.h>

/* Function prototypes */

void findAbs(int );


/* Main program */

int main () {
   int number;
   
   printf("Please enter a number:");
   scanf(" %d",  &number);
  
   findAbs(number);  /* Function's call */

   return 0;
}


/*
 * Function:findAbs
 * Usage: abs = findAbs()
 * ----------------------
 * Returns the absolute value of a number.
 */

void findAbs(int  a ) {
    int x;

    if  (a >= 0 ) {
       x = a;
    } else {
       x = -a;
    }
    printf("\nThe absolute value  of %d , is %d\n", x);

    
}
