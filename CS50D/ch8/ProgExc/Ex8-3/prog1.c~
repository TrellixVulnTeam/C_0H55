/*
 * File: prog1.c
 * ---------------
 * This program  locate the minimum value of
 * passed  array.
 */


#include <stdio.h>


/* Constants */

#define MAXELS 5


/* Function prototypes */

int findMin(int [], int);


/* Main program */

int main() {
  int nums[MAXELS] = {108, 7, 14, 60, 144};

   printf("The maximum value is %d\n", findMin(nums, MAXELS)); /* Function's call */
 
   return 0;
}

/* 
 * Function:findMax
 * Usage:int val [MAXELS];
 * -----------------------
 * Returns the maximum value.
 */

int findMin(int vals[], int numels) {
   int i, max = vals[0];

   for (i = 1; i < numels; i++) {
      if (min < vals[i]) {
        min = vals[i];
      }
   }
   return (min);
}
