/*
 * File: pgm6-1.c 
 * --------------
 * This program determines the maxium of two
 * entered numbers by the user.
 */
 
#include <stdio.h>

/* Function prototypes */

void findMax(float , float ); 

/* Main Program */

int main() {
    
   float firstnum, secnum;
   printf("Enter a number: ");
   scanf("%f", &firstnum);
   printf("Great! Please enter a second number: ");
   scanf("%f", &secnum);

/* The function is called here */
   findMax(firstnum, secnum);    

   return 0;
}

/* the following is the function findMax 
 * Function: findMax
 * -----------------
 * Returns the  maximum  of two numbers.
 */

/* this is the function's header line */

void findMax(float x, float y) {   
   float maxnum;

   if  (x >= y) {
      maxnum = x;
   { else  {
      maxnum = y;
   }
   printf("\nThe maximum of the two numbers entered is %f\n", maxnum);
}
